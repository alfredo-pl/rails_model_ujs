<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= render 'form', post: @post %>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="my_posts">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post, remote: true %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, remote: true, data: { confirm: 'Â¿seguro de eliminar este post?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

